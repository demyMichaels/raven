    <style>
        .topic-card {
            transition: all 0.2s ease-in-out;
        }
        .topic-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(93, 92, 222, 0.15);
        }
        .subtopic {
            opacity: 0.7;
            font-size: 0.875rem;
        }
        .search-highlight {
            background-color: #fef08a;
        }
        .dark .search-highlight {
            background-color: #713f12;
            color: #fef08a;
        }
    </style>
